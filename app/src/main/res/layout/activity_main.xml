<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pt_bg"
    android:padding="24dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


    <!-- PowerToys 스타일 카드 : Gesture Service Start/Stop -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_gesture_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/card_background"
            android:elevation="3dp"
            android:foreground="?attr/selectableItemBackground"
            app:strokeColor="@color/pt_border"
            app:strokeWidth="0.5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">


            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_gesture_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gesture Service"
                        android:textColor="@color/pt_text_title"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_gesture_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="손가락 제스처를 인식해 스크롤을 제어합니다"
                        android:textColor="@color/pt_text_desc"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_gesture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:thumbTint="@color/switch_thumb_color"
                    app:trackTint="@color/switch_track_color"
                    android:scaleX="0.82"
                    android:scaleY="0.82"
                    android:checked="false" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- 접근성 설정 카드 (Button 대신 카드스타일) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_accessibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:elevation="3dp"
            android:foreground="?attr/selectableItemBackground"
            app:strokeColor="@color/pt_border"
            app:strokeWidth="0.5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_access_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Accessibility Setting"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/pt_text_title"/>

                    <TextView
                        android:id="@+id/tv_access_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="remote-scroll의 접근성 서비스를 활성화하세요"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/pt_text_desc"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@drawable/baseline_settings_24"
                    android:tint="@color/pt_switch_on"
                    android:scaleX="0.6"
                    android:scaleY="0.6"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
